<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/AnimateGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/log_ic_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/log_in_user"
            app:layout_constraintEnd_toStartOf="@+id/log_v_0.2"
            app:layout_constraintTop_toTopOf="@+id/log_in_user"
            app:srcCompat="@drawable/ic_baseline_person_24"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/log_in_user"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:autofillHints="username"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/log_h_0.45"
            app:layout_constraintEnd_toStartOf="@+id/log_v_0.9"
            app:layout_constraintStart_toEndOf="@id/log_ic_user" />

        <ImageView
            android:id="@+id/log_ic_pwd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/log_in_pwd"
            app:layout_constraintEnd_toStartOf="@+id/log_v_0.2"
            app:layout_constraintTop_toTopOf="@id/log_in_pwd"
            app:srcCompat="@drawable/ic_baseline_error_outline_24"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/log_in_pwd"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:autofillHints="password"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/log_h_0.55"
            app:layout_constraintEnd_toStartOf="@+id/log_v_0.9"
            app:layout_constraintStart_toEndOf="@id/log_ic_pwd" />

        <TextView
            android:id="@+id/log_ln_rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="重置密码"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/log_h_0.6"
            app:layout_constraintEnd_toStartOf="@+id/log_v_0.7" />

        <TextView
            android:id="@+id/log_ln_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="我要注册"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/log_h_0.6"
            app:layout_constraintEnd_toStartOf="@+id/log_v_0.9" />

        <Button
            android:id="@+id/log_btn_log"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/log_h_0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/log_h_0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/log_h_0.45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/log_h_0.55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.48" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/log_h_0.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.56" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/log_h_0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.62" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/log_v_0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/log_v_0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/log_v_0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/log_h_0.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>